<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        tools:context=".AddCapacitacionFragment$Informacion1Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="100"
        android:orientation="vertical">
        <com.beardedhen.androidbootstrap.BootstrapWell
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="13.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="2.5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Nombre del seminario"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_weight="3"/>

                    <com.beardedhen.androidbootstrap.BootstrapEditText
                        android:id="@+id/txtNombreSeminario"
                        android:layout_width="0dp"
                        android:inputType="textPersonName"
                        android:layout_height="35dp"
                        app:bootstrapBrand="info"
                        app:roundedCorners="true"
                        app:bootstrapSize="lg"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="7"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="2.5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Temas"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_weight="2"/>

                    <mabbas007.tagsedittext.TagsEditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/txtTemas"
                        app:allowSpaceInTag="true"
                        android:layout_gravity="center_vertical"
                        app:tagsBackground="@drawable/square_default"
                        android:layout_weight="8"
                        app:tagsCloseImageRight="@drawable/tag_close"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="10"
                    android:layout_weight="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:layout_weight="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="5">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Hora inicio"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_weight="3.5"/>

                            <com.beardedhen.androidbootstrap.BootstrapEditText
                                android:id="@+id/txtHrInicio"
                                android:layout_width="0dp"
                                android:inputType="time"
                                android:layout_height="36dp"
                                app:bootstrapBrand="info"
                                app:roundedCorners="true"
                                app:bootstrapSize="lg"
                                android:hint="hh:mm"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="4.5"/>

                            <ImageButton
                                android:id="@+id/btnHrIni"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_time"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_weight="5">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Hora fin"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_weight="3.5"/>

                            <com.beardedhen.androidbootstrap.BootstrapEditText
                                android:id="@+id/txtHrFin"
                                android:layout_width="0dp"
                                android:inputType="time"
                                android:layout_height="36dp"
                                app:bootstrapBrand="info"
                                app:roundedCorners="true"
                                app:bootstrapSize="lg"
                                android:hint="hh:mm"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="4.5"/>

                            <ImageButton
                                android:id="@+id/btnHrFin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_time"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="4">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:text="DuraciÃ³n"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_weight="4"/>

                            <com.beardedhen.androidbootstrap.BootstrapEditText
                                android:id="@+id/txtDuracion"
                                android:layout_width="match_parent"
                                android:inputType="text"
                                android:layout_height="0dp"
                                app:bootstrapBrand="info"
                                app:roundedCorners="true"
                                app:bootstrapSize="lg"
                                android:enabled="false"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="6"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="3.5">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Lugar"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_weight="3"/>

                    <Spinner
                        android:id="@+id/spLugar"
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:spinnerMode="dialog"></Spinner>

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:weightSum="10"-->
                    <!--android:layout_weight="1.8">-->
                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="Se hizo lectura de la polÃ­tica SHEQ durante la capacitaciÃ³n?"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:textSize="16sp"-->
                        <!--android:layout_weight="8"/>-->

                    <!--<CheckBox-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="2"/>-->

                <!--</LinearLayout>-->
            </LinearLayout>
        </com.beardedhen.androidbootstrap.BootstrapWell>
        <com.beardedhen.androidbootstrap.BootstrapWell
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="35">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Cargos que recibiran capacitaciÃ³n..."
                    android:gravity="top"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1.5"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="85">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recCargos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </com.beardedhen.androidbootstrap.BootstrapWell>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnGuadarCap"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:layout_width="match_parent"
            app:bootstrapText="Guardar informaciÃ³n {fa_floppy_o}"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            android:layout_marginTop="10dp"
            app:roundedCorners="true">
        </com.beardedhen.androidbootstrap.BootstrapButton>
    </LinearLayout>
</ScrollView>