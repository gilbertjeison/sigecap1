<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/selectable_item_background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/capacitacion"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txtNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnail"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/item_name"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/ll0"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameItem"
        android:layout_marginLeft="105dp">
        <TextView
            android:id="@+id/txtTms"
            android:text="TEMAS: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/thumbnail"
            android:textColor="@color/description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/txtTemas"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll0"
        android:layout_marginLeft="105dp">
        <TextView
            android:id="@+id/txtphAr"
            android:text="DURACIÃ“N: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/thumbnail"
            android:layout_below="@id/txtCcItem"
            android:textColor="@color/description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/txtphAr"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll1"
        android:layout_marginLeft="105dp">


        <TextView
            android:id="@+id/txtphCar"
            android:text="ASISTENTES: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtAreaItem"
            android:textColor="@color/description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNumAsistentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/txtphCar"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>